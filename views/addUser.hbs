<h2>New User</h2>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">New User</li>
  </ol>
</nav>

<form class="row g-3 needs-validation" method="POST" action="/adduser" novalidate>
{{!-- {{First Name}} --}}
  <div>
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" placeholder="First Name" name="first_name">
      <label for="floatingInput">First Name</label>
    </div>
  </div>
{{!-- {{Last Name}} --}}
  <div>
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" placeholder="Last Name" name="last_name">
      <label for="floatingInput">Last Name</label>
    </div>
  </div>
{{!-- {{Industry}} --}}
  <div>
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" placeholder="industry" name="industry">
      <label for="floatingInput">Industry</label>
    </div>
  </div>
{{!-- {{Job Title}} --}}
  <div>
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" placeholder="Job Title" name="job_title">
      <label for="floatingInput">Job Title</label>
    </div>
  </div>
{{!-- {{Website}} --}}
  <div>
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" placeholder="Website" name="website">
      <label for="floatingInput">Website</label>
    </div>
  </div>
{{!-- {{E-mail}} --}}
  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="email" class="form-control" id="floatingInput" placeholder="email" name="email">
      <label for="floatingInput">E-mail</label>
    </div>
  </div>
{{!-- {{Phone Number}} --}}
  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" placeholder="Phone Number" name="phone_number">
      <label for="floatingInput">Phone Number</label>
    </div>
  </div>
{{!-- {{Instagram}} --}}
  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" placeholder="Instagram" name="instagram">
      <label for="floatingInput">Instagram</label>
    </div>
  </div>
{{!-- {{Linkedin}} --}}
  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" placeholder="Linkedin" name="linkedin">
