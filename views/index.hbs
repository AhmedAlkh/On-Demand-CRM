<div class = "row">
  <div class="col-6"><h1>Customers</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="add-customer btn btn-outline-dark bg-success align-self-center">+ add customer</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark text-center">
    <tr>
      <th scope="col">Customer Number</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">E-Mail</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
      <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone_number}}</td>
      <td class="text-center">
          <a href="/viewCustomer/{{this.id}}" type="button" class="btn btn-dark btn-small"><i class="bi bi-eye"></i> View</a>
          <a href="/edituser/{{this.id}}" type="button" class="btn btn-dark btn-small"><i class="bi bi-pencil"></i> Edit</a>
          <a href="/{{this.id}}" type="button" class="btn btn-dark btn-small"><i class="bi bi-person-x"></i> Remove</a>
      </td>
      </tr>
      {{/each}}
  </tbody>
</table>